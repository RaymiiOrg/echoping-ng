SUBDIRS=@subdirs@

all:
ifneq (${SUBDIRS},)
	@for subdir in ${SUBDIRS}; do \
		(cd $$subdir && ${MAKE} HAVE_CONFIG_H=1 $@) \
	done
endif

install:
ifneq (${SUBDIRS},)
	@for subdir in ${SUBDIRS}; do \
		(cd $$subdir && ${MAKE} $@) \
	done
endif

distdir:
ifneq (${SUBDIRS},)
	@for subdir in ${SUBDIRS}; do \
		(cd $$subdir && ${MAKE} $@) \
	done
endif
